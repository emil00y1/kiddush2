---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import ArchiveCard from "../components/ArchiveCard.astro";

const data = await fetch("https://syezauaectamogglkmvc.supabase.co/rest/v1/products?order=id.asc&category=eq.Beers%20and%20Drinks", {
  method: "GET",
  headers: {
    apikey:
      "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InN5ZXphdWFlY3RhbW9nZ2xrbXZjIiwicm9sZSI6ImFub24iLCJpYXQiOjE2ODQ0OTcyODUsImV4cCI6MjAwMDA3MzI4NX0.5CbbGAvqETjhd1_tbVm-oa-4F_JHliJV0Xuy_dG2rms",
  },
}).then((res) => res.json());

const comingSoonData = data.filter((item) => item.comingsoon === true);
const notComingSoonData = data.filter((item) => item.comingsoon === false);
---

<MainLayout title="BEERS BY KIDDUSH">
  <Header slot="header" archive="active" />
  <p>Below you can find all the beers ever brewed and designed by Kiddush. We are proud of our graphic design and taste, so why not show it?</p>
  <section>
    {
      notComingSoonData.map((product) => {
        return <ArchiveCard data={product} />;
      })
    }
    <h2>Coming soon</h2>
    <div class="bargemenu">
      <div class="bar"></div>
    </div>
    {
      comingSoonData.map((product) => {
        return <ArchiveCard data={product} />;
      })
    }
  </section>
</MainLayout>
<style>
  p {
    margin: 14px;
    text-align: center;
    padding-bottom: 40px;
  }

  h1 {
    margin-left: 14px;
    margin-right: 14px;
    padding-bottom: 60px;
  }

  h2 {
    padding: 50px 0 20px;
  }
  @media (min-width: 630px) {
    p {
      max-width: 612px;
      margin: auto;
    }
  }
  @media (min-width: 800px) {
    p {
      padding-bottom: 68px;
    }
  }

  .bargemenu {
    width: 30px;
    height: 20px;

    position: relative;
    margin: 0 auto 40px;
    transform: rotate(-90deg);
  }

  .bargemenu .bar {
    width: 100%;
    height: 3px;
    background-color: var(--kiddushblack);
    position: absolute;
    top: 50%;
    left: 0;

    border-radius: 10px;
  }

  .bargemenu .bar::before,
  .bargemenu .bar::after {
    content: "";
    position: absolute;
    width: 50%;
    height: 3px;
    background-color: var(--kiddushblack);

    border-radius: 10px;
  }

  .bargemenu .bar {
    transform: rotate(360deg);
  }

  .bargemenu .bar::before {
    transform: translate(-1px, 5px) rotate(45deg);
  }

  .bargemenu .bar::after {
    transform: translate(-1px, -5px) rotate(-45deg);
  }
</style>
