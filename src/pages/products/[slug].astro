    cursor: pointer;
    transform: translateY(-50%) rotate(315deg); */
  }

  #quantity {
    font-family: Montserrat;
    display: block;
    text-align: center;
    line-height: 0px;
    font-size: 30px;
    position: relative;
    top: 25%;
    /* display: none; */
  }

  #box span:nth-child(1) {
    display: initial;
  }

  .ingredients {
    font-weight: 700;
  }
  p {
    margin-left: 14px;
    margin-right: 14px;
  }

  @media (min-width: 800px) {
    .indhold {
      display: grid;
      grid-template-columns: 1fr 1fr;
      max-width: 1170px;
      margin: auto;
      padding-bottom: 100px;
    }

    .img_container {
      display: flex;
      justify-content: center;
    }
    .product_img {
      width: 272px;
    }

    .back_container {
      margin-left: 20px;
    }
    .back {
      top: -2px;
    }

    .brand {
      text-align: left;
    }

    #h1_slug {
      text-align: left;
      padding-bottom: 0px;
    }

    .price {
      text-align: left;
    }

    .container {
      width: 262px;
      height: 50px;
      border-radius: 11px;
      border: 2px solid;
    }
  }
</style>

<script type="text/javascript">
  function goBack() {
    history.back();
  }

  let quantity = 1;
  const quantityElement = document.getElementById("quantity");

  function increaseQuantity() {
    quantity++;
    updateQuantity();
  }

  function decreaseQuantity() {
    if (quantity > 1) {
      quantity--;
      updateQuantity();
    }
  }

  // Function to fetch beer data from the database
  async function fetchBeerData() {
    const response = await fetch("https://syezauaectamogglkmvc.supabase.co/rest/v1/products?order=id.asc", {
      method: "GET",
      headers: {
        apikey: "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InN5ZXphdWFlY3RhbW9nZ2xrbXZjIiwicm9sZSI6ImFub24iLCJpYXQiOjE2ODQ0OTcyODUsImV4cCI6MjAwMDA3MzI4NX0.5CbbGAvqETjhd1_tbVm-oa-4F_JHliJV0Xuy_dG2rms", // Erstat med din egen API-nÃ¸gle
      },
    });

    if (response.ok) {
      const data = await response.json();
      return data;
    } else {
      throw new Error("Unable to fetch beer data");
    }
  }

  // Function to generate random beers and display them on the page
  async function generateRandomBeers() {
    const container = document.getElementById("otherBeersContainer");
    const beerList = [];

    try {
      const beerData = await fetchBeerData();

      // Add beer name and image to beerList array
      beerData.forEach((beer) => {
        beerList.push({
          name: beer.name,
          img: beer.img,
        });
      });

      for (let i = 0; i < 5; i++) {
        const randomBeer = beerList[Math.floor(Math.random() * beerList.length)];

        const beerElement = document.createElement("div");
        beerElement.innerHTML = `
          <div class="img_container">
            <img class="product_img" src="${randomBeer.img}" alt="Can of ${randomBeer.name}">
          </div>
          <p>${randomBeer.name}</p>
        `;

        container.appendChild(beerElement);
      }
    } catch (error) {
      console.error(error);
    }
  }

  generateRandomBeers();
</script>
